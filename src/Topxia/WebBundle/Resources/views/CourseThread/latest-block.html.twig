<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">最新讨论</h3>
  </div>
  <div id="scroll-threads" class="panel-body">

    <ul class="text-list">
      {% for thread in threads %}
        <li class="clearfix">
          
          <span class="text-muted pull-right">{{ thread.createdTime|date('Y-m-d') }}</span>
          <a id="course-buy-btn" href="#modal" data-toggle="modal" data-url="{{ path('course_buy', {id:course.id}) }}" >{{ thread.title|plain_text(15) }}</a>

          
        </li>
      {% else %}
      {% endfor %}
    </ul>
    {% if not threads %}
      <div class="empty">暂无讨论</div>
    {% endif %}
  </div>
</div>