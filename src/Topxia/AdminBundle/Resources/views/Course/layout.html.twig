{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set nav = 'course' %}

{% block content %}
  <div class="col-md-2">
    {% block sidebar %}
      <div class="list-group">
        <a href="{{ path('admin_course') }}" class="list-group-item {% if menu == 'course' %}active{% endif %}">课程管理</a>

        <a href="{{ url('admin_course_order_manage') }}" class="list-group-item {% if menu == 'course-order' %}active{% endif %}">交易管理</a>

        <a href="{{ url('admin_order_refunds', {status:'created'}) }}" class="list-group-item {% if menu == 'refunds' %}active{% endif %}">退款管理</a>

        <a href="{{ path('admin_review') }}" class="list-group-item {% if menu == 'review' %}active{% endif %}">评价管理</a>

        <a href="{{ url('admin_thread') }}" class="list-group-item {% if menu == 'thread' %}active{% endif %}">讨论区管理</a>

        <a href="{{ url('admin_question', {postStatus: 'unPosted'}) }}" class="list-group-item {% if menu == 'question' %}active{% endif %}">问答管理</a>

        <a href="{{ url('admin_note') }}" class="list-group-item {% if menu == 'note' %}active{% endif %}" >笔记管理</a>

        <a href="{{ url('admin_course_category') }}" class="list-group-item {% if menu == 'category' %}active{% endif %}">分类管理</a>

        <a href="{{ url('admin_tag') }}" class="list-group-item {% if menu == 'tag' %}active{% endif %}">标签管理</a>

        <a href="{{ url('admin_course_disk') }}" class="list-group-item {% if menu == 'course-disk' %}active{% endif %}" style="display:none;">文件管理</a>

      </div>
    {% endblock %}
  </div>
  <div class="col-md-10">
      {% block main %}{% endblock %}
  </div>
{% endblock %}